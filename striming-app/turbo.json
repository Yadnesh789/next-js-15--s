{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["TURBOPACK", "NEXT_PRIVATE_TURBOPACK"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["TURBOPACK"]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_*",
    "TURBOPACK",
    "NEXT_PRIVATE_TURBOPACK"
  ]
}
